---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const chapters = (await getCollection("chapters", ({ data }) => data.status === "active"))
  .sort((a, b) => a.data.order - b.data.order);
const latest = chapters.at(-1);
---

<BaseLayout title="全中国最激烈故事 · 在线阅读">
  <section class="frame hero">
    <h2>全中国最激烈故事</h2>
    <p class="desc">卷一连载中，持续更新。点击下方开始阅读。</p>
    <div class="actions">
      <a class="primary" href="/book/book-1/chapter/b1-c001">开始阅读</a>
      {latest ? <a href={`/book/${latest.data.book_id}/chapter/${latest.data.chapter_id}`}>最新章节</a> : null}
      <a href="/book/book-1">章节目录</a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero h2 {
    margin: 0 0 0.4rem;
    font-size: clamp(1.5rem, 3.5vw, 2rem);
  }
  .desc {
    margin: 0;
    color: var(--muted);
    line-height: 1.8;
  }
  .actions {
    margin-top: 1.2rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .actions a {
    text-decoration: none;
    padding: 0.45rem 0.9rem;
    border-radius: 0.35rem;
    border: 1px solid var(--line);
    color: var(--bg-ink);
    font-size: 0.92rem;
    transition: border-color .2s;
  }
  .actions a:hover { border-color: var(--accent); color: var(--accent); }
  .actions a.primary {
    background: var(--accent);
    color: #fff;
    border-color: var(--accent);
  }
  .actions a.primary:hover { opacity: 0.85; color: #fff; }
</style>
