---
const { title = "全中国最激烈故事", description = "在线阅读站" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@900&family=Noto+Serif+SC:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      (function(){
        const t = localStorage.getItem('theme');
        if (t === 'dark' || (!t && matchMedia('(prefers-color-scheme:dark)').matches))
          document.documentElement.classList.add('dark');
      })();
    </script>
    <style>
      :root {
        --bg: #f0ece4;
        --bg-ink: #111;
        --paper: #e8e2d8;
        --accent: #c41a1a;
        --muted: #5a5248;
        --line: #c4b8a4;
        --accent-glow: #c41a1a33;
      }
      html.dark {
        --bg: #0a0a0a;
        --bg-ink: #d4cfc7;
        --paper: #141414;
        --accent: #e02020;
        --muted: #7a7268;
        --line: #2a2520;
        --accent-glow: #e0202044;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        color: var(--bg-ink);
        font-family: "Noto Serif SC", serif;
        background: var(--bg);
        min-height: 100vh;
        transition: background .3s, color .3s;
      }
      main {
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem 1.25rem 4rem;
      }
      .site-head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        border-bottom: 1px solid var(--line);
        margin-bottom: 1.5rem;
        padding-bottom: 0.8rem;
      }
      .site-title {
        font-size: clamp(1.2rem, 3.5vw, 1.6rem);
        font-weight: 700;
        margin: 0;
      }
      .site-title a {
        text-decoration: none;
        color: var(--bg-ink);
      }
      .head-right {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }
      .nav-link {
        font-size: 0.88rem;
        color: var(--muted);
        text-decoration: none;
      }
      .nav-link:hover { color: var(--accent); }
      .theme-toggle {
        background: none;
        border: 1px solid var(--line);
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        color: var(--muted);
        transition: border-color .2s;
        flex-shrink: 0;
      }
      .theme-toggle:hover { border-color: var(--accent); }
      .frame {
        background: var(--paper);
        border: 1px solid var(--line);
        border-radius: 0.5rem;
        padding: 1.25rem;
      }
      a { color: var(--accent); }
      @media (max-width: 640px) {
        .site-head { gap: 0.5rem; }
        main { padding-top: 1.2rem; }
      }
    </style>
  </head>
  <body>
    <main>
      <header class="site-head">
        <h1 class="site-title"><a href="/">全中国最激烈故事</a></h1>
        <div class="head-right">
          <a href="/search" class="nav-link">搜索</a>
          <button class="theme-toggle" id="theme-toggle" aria-label="切换深色模式">
            <span id="theme-icon">☀</span>
          </button>
        </div>
      </header>
      <slot />
    </main>
    <script is:inline>
      (function(){
        const btn = document.getElementById('theme-toggle');
        const icon = document.getElementById('theme-icon');
        function update(){
          const dark = document.documentElement.classList.contains('dark');
          icon.textContent = dark ? '☀' : '☾';
        }
        update();
        btn.addEventListener('click', function(){
          document.documentElement.classList.toggle('dark');
          const dark = document.documentElement.classList.contains('dark');
          localStorage.setItem('theme', dark ? 'dark' : 'light');
          update();
        });
      })();
    </script>
  </body>
</html>
